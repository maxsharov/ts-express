{
  "name": "ts-express",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "build:client": "yarn --cwd client build",
    "build:all": "yarn build && yarn build:client",
    "start": "node ./dist/app.js",
    "dev:server": "nodemon src/app.ts",
    "dev:client": "yarn --cwd client start",
    "dev": "concurrently \"yarn dev:server\" \"yarn dev:client\""
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.1.0",
    "concurrently": "^8.0.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "dropbox": "^10.34.0",
    "dropbox-v2-api": "^2.5.10",
    "express": "^4.18.2",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1"
  }
}
